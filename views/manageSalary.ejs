<div class="flex-1 overflow-y-auto bg-gray-100">
    <div class="container mx-auto p-6">
        <div class="mb-6">
            <h1 class="text-3xl font-semibold text-gray-800">Salary Management</h1>
            <p class="text-gray-500">Calculate and manage salary payments</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-white rounded-md shadow-sm p-4 border border-gray-200">
                <label class="block text-sm font-semibold mb-2">Period</label>
                <select name="periode" class="w-full border-0 rounded-lg px-4 py-2.5 focus:ring-2">
                    <option>Select Period</option>
                    <option value="2025-05">May 2025</option>
                    <option value="2025-04">April 2025</option>
                    <option value="2025-03">March 2025</option>
                    <option value="2025-02">February 2025</option>
                </select>
            </div>

            <div class="bg-white rounded-md shadow-sm p-4 border border-gray-200">
                <label class="block text-sm font-semibold mb-2">Department</label>
                <select name="department" class="w-full border-0 rounded-lg px-4 py-2.5 focus:ring-2">
                    <option>Select Department</option>
                    <option value="Human Resources">Human Resources</option>
                    <option value="Finance">Finance</option>
                    <option value="Information Technology">Information Technology</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Operations">Operations</option>
                </select>
            </div>

            <div class="bg-white rounded-md shadow-sm p-4 border border-gray-200">
                <label class="block text-sm font-semibold mb-2">Status</label>
                <select name="status" class="w-full border-0 rounded-lg px-4 py-2.5 focus:ring-2">
                    <option value="">All Status</option>
                    <option value="Lunas">Lunas</option>
                    <option value="Belum Lunas">Belum Lunas</option>
                </select>
            </div>


            <div class="bg-white rounded-md shadow-sm p-4 border border-gray-200">
                <label class="block text-sm font-semibold mb-2">Search</label>
                <input type="text" name="search" placeholder="Search name..."
                    class="w-full border-0 rounded-lg px-4 py-2.5 focus:ring-2" />
            </div>
        </div>

        <div class="bg-white p-6 rounded-md shadow-sm border border-gray-200 mb-8">
            <h2 class="text-xl font-semibold mb-6">Salary List Employee</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Role</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Base Salary</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Bonus</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Allowance</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Deductions</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Net Pay</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Status</th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200" data-salary-rows>
                        </tbody>
                </table>
            </div>

            <div class="flex justify-between items-center mt-4 text-sm text-gray-500">
                <div id="pagination-summary"></div>
                <div class="flex space-x-2">
                    <button id="prev-button" class="px-3 py-1 border border-gray-300 rounded-md bg-white disabled:opacity-50 disabled:cursor-not-allowed">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="15 18 9 12 15 6"></polyline>
                        </svg>
                    </button>
                    <button id="next-button" class="px-3 py-1 border border-gray-300 rounded-md bg-white disabled:opacity-50 disabled:cursor-not-allowed">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </button>
                </div>
            </div>
            </div>

        <div class="bg-white p-6 rounded-md shadow-sm border border-gray-200 mb-8">
            <h2 class="text-xl font-semibold mb-6">Salary Calculator</h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                    <input type="text" name="employeeName" readonly
                        class="w-full pl-3 pr-4 py-2 border border-gray-300 bg-gray-100 rounded-md focus:outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Position</label>
                    <input type="text" name="employeePosition" readonly
                        class="w-full pl-3 pr-4 py-2 border border-gray-300 bg-gray-100 rounded-md focus:outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Department</label>
                    <input type="text" name="employeeDepartment" readonly
                        class="w-full pl-3 pr-4 py-2 border border-gray-300 bg-gray-100 rounded-md focus:outline-none" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Base Salary (Gaji Pokok)</label>
                    <input name="baseSalary" type="text" value=""
                        class="w-full pl-3 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-black focus:border-black" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Bonus</label>
                    <input name="bonus" type="text" value=""
                        class="w-full pl-3 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-black focus:border-black" />
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Allowance (Tunjangan)</label>
                    <input name="allowance" type="text" value=""
                        class="w-full pl-3 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-black focus:border-black" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Deductions (Potongan)</label>
                    <input name="deduction" type="text" value=""
                        class="w-full pl-3 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-black focus:border-black" />
                </div>
            </div>

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Payment Status</label>
                <select name="paymentStatus" class="w-full pl-3 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-black focus:border-black" disabled>
                    <option value="Pending">Pending</option>
                    <option value="Paid">Paid</option>
                </select>
            </div>

            <div class="bg-gray-50 p-5 rounded-md border border-gray-200 mb-6">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                    <div class="mb-3 md:mb-0">
                        <div class="text-sm text-gray-500">Net Salary</div>
                        <div class="text-2xl font-semibold text-gray-800 mt-1"></div>
                    </div>
                    <div class="text-sm text-gray-500">
                        <div class="flex justify-between mb-1">
                            <span>Base Salary:</span>
                            <span class="font-medium text-gray-800"></span>
                        </div>
                        <div class="flex justify-between mb-1">
                            <span>Bonus:</span>
                            <span class="font-medium text-gray-800"></span>
                        </div>
                        <div class="flex justify-between mb-1">
                            <span>Allowance:</span>
                            <span class="font-medium text-gray-800"></span>
                        </div>
                        <div class="flex justify-between">
                            <span>Deductions:</span>
                            <span class="font-medium text-gray-800"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-3">
                <button class="flex-1 bg-black hover:bg-gray-800 text-white py-2 rounded-md font-medium">
                    Calculate
                </button>
                <button class="flex-1 bg-green-600 hover:bg-green-700 text-white py-2.5 rounded-lg font-medium">
                    <i class="fas fa-save mr-2"></i> Save
                </button>
                <button
                    class="flex-1 border border-gray-300 bg-white hover:bg-gray-50 text-gray-700 py-2 rounded-md font-medium">
                    Reset
                </button>
            </div>
        </div>
    </div>
</div>

<script src="/js/manageSalary.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>