<!-- All Requests View -->
<div id="all-requests-view" class="p-6">
	<div class="mb-6">
		<h1 class="text-3xl font-semibold text-gray-800">Leave Management</h1>
		<p class="text-gray-500">Track and manage employee leave requests.</p>
	</div>

	<div class="flex justify-between mb-6">
		<div class="relative w-full max-w-md">
			<input
				type="text"
				placeholder="Search Leave Requests..."
				data-leave-request-search
				class="w-full pl-3 pr-10 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-black focus:border-black"
			/>
		</div>
		<div class="relative">
			<button
				data-sort-menu-toggle
				class="flex items-center space-x-1 border border-gray-300 rounded-md px-3 py-2 bg-white"
			>
				<span data-sort-label>Sort</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-4 w-4"
					viewBox="0 0 20 20"
					fill="currentColor"
				>
					<path
						fill-rule="evenodd"
						d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
						clip-rule="evenodd"
					/>
				</svg>
			</button>
			<div
				data-sort-menu
				class="absolute right-0 z-20 mt-1 w-48 bg-white rounded-md shadow-lg border border-gray-200 hidden"
			>
				<div class="py-1">
					<button
						data-sort-value="All"
						class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
						data-sort-value="name-asc"
					>
						All
					</button>
					<button
						data-sort-value="Approved"
						class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
						data-sort-value="name-asc"
					>
						Approve
					</button>
					<button
						data-sort-value="Pending"
						class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
						data-sort-value="name-desc"
					>
						Pending
					</button>
					<button
						data-sort-value="Rejected"
						class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
						data-sort-value="id"
					>
						Rejected
					</button>
				</div>
			</div>
		</div>
	</div>

	<div
		class="bg-white shadow-sm border border-gray-200 overflow max-w-full"
	>
		<div class="min-w-full">
			<table class="w-full divide-y divide-gray-200">
				<thead class="bg-gray-50">
					<tr>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						>
							Request ID
						</th>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						>
							Employee
						</th>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						>
							Leave Type
						</th>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						>
							Start Date
						</th>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						>
							End Date
						</th>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						>
							Days
						</th>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						>
							Status
						</th>
						<th
							class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
						></th>
					</tr>
				</thead>
				<tbody
					class="bg-white divide-y divide-gray-200"
					data-leave-request-rows
				>
					<!-- JavaScript populates leave request rows here -->
				</tbody>
			</table>
		</div>
	</div>

	<div class="flex justify-between items-center mt-4 text-sm text-gray-500">
		<div data-leave-request-summary></div>
		<div class="flex space-x-2">
			<button
				data-prev-leave-request
				class="px-3 py-1 border border-gray-300 rounded-md bg-white"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-5 w-5"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<polyline points="15 18 9 12 15 6"></polyline>
				</svg>
			</button>
			<button
				data-next-leave-request
				class="px-3 py-1 border border-gray-300 rounded-md bg-white"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-5 w-5"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<polyline points="9 18 15 12 9 6"></polyline>
				</svg>
			</button>
		</div>
	</div>
</div>

<!-- View Request Modal -->
<div
	data-view-request-modal
	class="fixed z-50 inset-0 overflow-y-auto hidden"
	aria-labelledby="modal-title"
	role="dialog"
	aria-modal="true"
>
	<div
		class="z-20 flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
	>
		<div
			class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity w-full hidden bg-overlay"
			aria-hidden="true"
		></div>

		<span
			class="hidden sm:inline-block sm:align-middle sm:h-screen"
			aria-hidden="true"
			>&#8203;</span
		>

		<div
			class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
		>
			<div>
				<div class="mt-3 text-center sm:mt-0 sm:text-left">
					<h3
						class="text-lg leading-6 font-medium text-gray-900"
						id="modal-title"
					>
						Leave Request Details
					</h3>
					<div class="mt-4 space-y-4">
						<div class="grid grid-cols-2 gap-4">
							<div>
								<p class="text-sm font-medium text-gray-500">Employee</p>
								<p class="mt-1 text-sm text-gray-900" data-bind="employee"></p>
							</div>
							<div>
								<p class="text-sm font-medium text-gray-500">Leave Type</p>
								<p class="mt-1 text-sm text-gray-900" data-bind="type"></p>
							</div>
						</div>

						<div class="grid grid-cols-2 gap-4">
							<div>
								<p class="text-sm font-medium text-gray-500">Start Date</p>
								<p class="mt-1 text-sm text-gray-900" data-bind="startDate"></p>
							</div>
							<div>
								<p class="text-sm font-medium text-gray-500">End Date</p>
								<p class="mt-1 text-sm text-gray-900" data-bind="endDate"></p>
							</div>
						</div>

						<div>
							<p class="text-sm font-medium text-gray-500">Total Days</p>
							<p class="mt-1 text-sm text-gray-900" data-bind="days"></p>
						</div>

						<div>
							<p class="text-sm font-medium text-gray-500">Status</p>
							<p class="mt-1">
								<span
									class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full"
									data-status
								></span>
							</p>
						</div>

						<div>
							<p class="text-sm font-medium text-gray-500">Reason</p>
							<p class="mt-1 text-sm text-gray-900" data-bind="reason"></p>
						</div>

						<div>
							<p class="text-sm font-medium text-gray-500">
								Contact Information
							</p>
							<p class="mt-1 text-sm text-gray-900" data-bind="contactInfo"></p>
						</div>

						<div data-rejection-section class="hidden">
							<p class="text-sm font-medium text-gray-500">Rejection Reason</p>
							<p
								class="mt-1 text-sm text-gray-900"
								data-bind="rejectionReason"
							></p>
						</div>
					</div>
				</div>
			</div>
			<div class="mt-5 sm:mt-6">
				<button
					type="button"
					data-close-view-request-modal
					class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-black text-base font-medium text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black sm:text-sm"
				>
					Close
				</button>
			</div>
		</div>
	</div>
</div>

<div
	id="reject-modal"
	class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
>
	<div class="bg-white p-6 rounded-md w-96">
		<h2 class="text-lg font-semibold mb-4">Reject Leave Request</h2>
		<textarea
			id="rejection-reason"
			class="w-full border rounded p-2 mb-4"
			placeholder="Enter rejection reason..."
			rows="4"
		></textarea>
		<div class="flex justify-end gap-2">
			<button
				id="cancel-reject"
				class="bg-gray-300 text-gray-800 px-4 py-2 rounded"
			>
				Cancel
			</button>
			<button
				id="confirm-reject"
				class="bg-red-500 text-white px-4 py-2 rounded"
			>
				Reject
			</button>
		</div>
	</div>
</div>

<script>
	window.serverLeaveRequests = <%- JSON.stringify(leaveRequests) %>;
	window.currentUser = <%- JSON.stringify(user) %>;
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/allRequests.js"></script>
